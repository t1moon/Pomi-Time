<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/tasksFragment">

    <fragment
        android:id="@+id/timerFragment"
        android:name="apps.tim.pomos.feature.ui.timer.TimerFragment"
        android:label="Timer"
        tools:layout="@layout/fragment_timer"></fragment>

    <fragment
        android:id="@+id/tasksFragment"
        android:name="apps.tim.pomos.feature.ui.tasks.TasksFragment"
        android:label="Tasks"
        tools:layout="@layout/fragment_tasks_tabs">

        <action
            android:id="@+id/action_tasksFragment_to_timerFragment"
            app:destination="@id/timerFragment" />
        <action
            android:id="@+id/action_tasksFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="apps.tim.pomos.feature.ui.settings.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings"/>

</navigation>